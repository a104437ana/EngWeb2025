extends layout

block content
    .w3-content.w3-padding-32
        if error
            .w3-panel.w3-pale-red.w3-border.w3-border-red.w3-round
                p #{error}
        form.w3-container.w3-card.w3-white.w3-round(method="POST")
            h1 Registar Utilizador
            br
            label Username
            input.w3-input.w3-border.w3-round(type="text" name="username" required)
            br
            label Password
            input.w3-input.w3-border.w3-round(type="password" name="password" required)
            br
            label Nível
            select.w3-select.w3-border.w3-round(name="level" required)
                option(value="0" selected) User
                option(value="1") Admin
            br
            label Ativo
            select.w3-select.w3-border.w3-round(name="active" required)
                option(value="true" selected) Sim
                option(value="false") Não
            br
            button.w3-button.w3-medium.w3-cyan.w3-text-black.w3-hover-cyan.w3-hover-text-black.w3-block.w3-section(type="submit") Registar
