extends layout

block content
    .w3-content.w3-padding-32
        if error
            .w3-panel.w3-pale-red.w3-border.w3-border-red.w3-round
                p #{error}
        form.w3-container.w3-card.w3-white.w3-round(method="POST")
            h1 Editar Utilizador
            br
            label Password
            input.w3-input.w3-border.w3-round(type="password" name="password" value=user.password)
            br
            label Nível
            select.w3-select.w3-border.w3-round(name="level")
                option(value="0" selected=(user.level === 0)) User
                option(value="1" selected=(user.level === 1)) Admin
            br
            br
            label Ativo
            select.w3-select.w3-border.w3-round(name="active")
                option(value="true" selected=(user.active === true)) Sim
                option(value="false" selected=(user.active === false)) Não
            br
            br
            button.w3-button.w3-medium.w3-cyan.w3-text-black.w3-hover-cyan.w3-hover-text-black.w3-block.w3-section(type="submit") Editar
