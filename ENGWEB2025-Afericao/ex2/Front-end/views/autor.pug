extends layout 

block content
    .w3-container
        p
        ul.w3-ul.w3-card-4
            li
                b id: 
                = autor || '-'
            li
                b name: 
                = autor || '-'
            li
                b n√∫mero total de livros: 
                = livros.length
        p
        table.w3-table-all
            tr.w3-light-blue.w3-text-black
                th id
                th title
                th author
                th publishDate
                th pages
            each livro in livros
                tr
                    td
                        a.w3-hover-text-pink(href='/' + livro._id) #{livro._id}
                    td= livro.title
                    td
                        ul.w3-ul
                            each au in livro.author
                                li
                                    a.w3-hover-text-pink(href='/entidades/' + au) #{au}
                    td= livro.publishDate
                    td= livro.pages
        p